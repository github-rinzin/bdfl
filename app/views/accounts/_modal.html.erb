<button type="button" class="btn btn-success text-capitalize btn-sm my-2  ml-2" data-toggle="modal" data-target="#inviteUser">
  Invite new user
</button>

<div class="modal fade" id="inviteUser" tabindex="-1" role="dialog" aria-labelledby="inviteUserLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="inviteUserLabel">Invite new BDFL Admin</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with url: accounts_path, class: "mx-auto" do |form| %>
          <div class="form-group">
            <%= form.label :email%>
            <%= form.email_field :email, class: "form-control"%>
          </div >
          <%= form.submit "Invite", class: "btn btn-sm btn-dark"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
