<button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deletePostModal<%= post.id %>">
  Destroy
</button>
<div class="modal fade" id="deletePostModal<%= post.id %>" tabindex="-1" role="dialog" aria-labelledby="deletePostModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        Are you sure ?<button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
       <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Close</button>
        <%= link_to 'Confirm', post, method: :delete, class: "btn btn-sm btn-danger text-light" %>
      </div>
    </div>
  </div>
</div>
